<%- include('partials/header') %>
<div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
    <div class="wrapper wrapper--w780">
        <div class="card card-3">
            <div class="card-heading_log"></div>
            <div class="card-body">
                <h2 class="title" style="text-align: center">Step In</h2>
                <form action="/login" method="post">
                    <div class="input-group">
                        <input class="input--style-3" type="text" name="username" placeholder="Username" required>
                    </div>
                    <div class="input-group">
                        <input class="input--style-3" type="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="p-t-10">
                        <button class="btn btn--pill btn--green" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
